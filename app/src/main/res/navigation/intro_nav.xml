<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_nav"
    app:startDestination="@id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.matterofchoice.fragment.IntroFragment"
        android:label="IntroFragment"
        tools:layout="@layout/intro_fragment">
        <action
            android:id="@+id/action_introFragment_to_personFragment"
            app:destination="@id/personFragment"
            app:enterAnim="@anim/from_right" />
    </fragment>
    <fragment
        android:id="@+id/personFragment"
        android:name="com.matterofchoice.fragment.PersonFragment"
        android:label="PersonFragment"
        tools:layout="@layout/person_fragment">
        <action
            android:id="@+id/action_personFragment_to_languagesFragment"
            app:destination="@id/languagesFragment"
            app:enterAnim="@anim/from_right" />
    </fragment>
    <fragment
        android:id="@+id/languagesFragment"
        android:name="com.matterofchoice.fragment.LanguagesFragment"
        android:label="LanguagesFragment"
        tools:layout="@layout/languages_fragment">
        <action
            android:id="@+id/action_languagesFragment_to_casesFragment"
            app:destination="@id/casesFragment"
            app:enterAnim="@anim/from_right"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/casesFragment"
        android:name="com.matterofchoice.fragment.CasesFragment"
        android:label="CasesFragment"
        tools:layout="@layout/cases_layout"/>
</navigation>